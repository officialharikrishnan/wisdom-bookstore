<div class="page-align" id="footer">
    <h1>View Product</h1>
    <table class="table table-bordered border-primary mt-5">
        <thead>
            <tr>
                <th>Image</th>
                <th scope="col">Product</th>
                <th scope="col">Address</th>
                <th scope="col">Quantity</th>
                <th scope="col">Price</th>
                <th scope="col">Price</th>

            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td class="book-image"><img src="/book-image/{{this.orders._id}}.jpg" alt="no"></td>
                <td>{{this.orders.bookname}}</td>
                <td>{{this.deliveryDetails.street}}
                    {{this.deliveryDetails.postcode}}
                </td>
                <td>{{this.product.quantity}}</td>
                <td>â‚¹{{this.product.cartItem.price}}</td>
                 <td>
                    {{!-- {{#if this.btnStatus}} --}}
                    <form action="/admin/delivery-status" method="post">
                    <input type="text" value="{{this.orders._id}}" name="id" hidden>
                    <input type="text" value="{{this._id}}" name="orderid" hidden>
                    <h6 class="badge badge-info">{{this.product.cartItem.deliveryStatus}}</h6><br>

                        <select class="shipping" name="status">
                            <option value="Preparing">Preparing</option>
                            <option value="Shipped">Shipped</option>
                            <option value="Delivered">Delivered</option>
                        </select>
                        
                        <input class="shipping" type="submit" value="Change">
                    </form>
                    {{!-- {{else}} --}}
                    <p class="badge badge-secondary">{{this.status}}</p> <br>
                    {{!-- {{/if}} --}}
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

</div>