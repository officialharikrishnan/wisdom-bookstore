<section class="page-align" id="footer">
    <div class="container">
        <h1>Edit Book</h1>

        <form action="/admin/edit-book-submit/{{book._id}}" method="post" enctype='multipart/form-data'>
            <div class="row mb-3">
                <label for="inputText" class="col-sm-2 col-form-label">Name of the book</label>
                <div class="col-sm-10">
                    <input type="text" name="bookname" value="{{book.bookname}}" class="form-control">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputEmail" class="col-sm-2 col-form-label">Author Name</label>
                <div class="col-sm-10">
                    <input type="text" name="authorname" value="{{book.authorname}}" class="form-control">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputPassword" class="col-sm-2 col-form-label">About Book</label>
                <div class="col-sm-10">
                    <textarea class="form-control" id="myTextarea1" name="aboutbook" style="height: 100px"></textarea>
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputPassword" class="col-sm-2 col-form-label">About Author</label>
                <div class="col-sm-10">
                    <textarea class="form-control" name="aboutauthor" id="myTextarea2" style="height: 100px"></textarea>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Category</label>
                <div class="col-sm-10">
                    <select class="form-select" name="category" aria-label="Default select example">
                        {{#if book}}
                        <option value="{{book.category}}">{{book.category}}</option>
                        {{else}}
                        <option value="{{book.category}}">Select category</option>
                        {{/if}}
                        {{#each categdata}}
                        <option  value="{{this.name}}">{{this.name}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Language</label>
                <div class="col-sm-10">
                    <select class="form-select" name="language" aria-label="Default select example">
                        {{#if book}}
                        <option value="{{book.language}}">{{book.language}}</option>
                        {{else}}
                        <option>Select Language</option>
                        {{/if}}
                        <option value="english">English</option>
                        <option value="hindi">Hindi</option>
                        <option value="malayalam">Malayalam</option>
                    </select>
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputNumber" class="col-sm-2 col-form-label">File Upload</label>
                <div class="col-sm-10">
                    <input class="form-control" type="file"  name="Image" id="formFile">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputDate" class="col-sm-2 col-form-label">Date of Publish</label>
                <div class="col-sm-10">
                    <input type="date" value="{{book.dateofpublish}}" name="dateofpublish" class="form-control">
                </div>
            </div>
                        <div class="row mb-3">
                <label for="inputDate" class="col-sm-2 col-form-label">Price</label>
                <div class="col-sm-10">
                    <input type="number" name="price" value="{{book.price}}"  class="form-control">
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Edit</button>
                </div>
            </div>

        </form>
    </div>
    <input type="text" value="{{book.aboutbook}}"  id="aboutbook" hidden>
    <input type="text" value="{{book.aboutauthor}}"  id="aboutauthor" hidden>
</section>
<script>
    document.getElementById("myTextarea1").defaultValue = document.getElementById('aboutbook').value;
    document.getElementById("myTextarea2").defaultValue = document.getElementById('aboutauthor').value;

</script>